    "QGIS Python CMD": {
      "path": "cmd.exe",
      "args": [
        "/k",
        "call .\\qgis-launchers\\activate-python-qgis.bat"
      ]
    },
    "QGIS Python +Path CMD": {
      "path": "cmd.exe",
      "args": [
        "/k",
        "call .\\qgis-launchers\\activate-python-qgis-path.bat"
      ]
    }
  }
}